<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.profil.ProfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearProfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/bgs"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profil"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/slider_3"/>
                        <ImageView
                            android:id="@+id/profilChangePhoto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_camera"
                            android:layout_gravity="end|bottom"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/profilName"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:text="User Name"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="272dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="11">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/profilAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/colorWave"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auth Status"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/profilHealth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Super Admin"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:textSize="18sp"
                                android:textColor="@color/colorWave"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Count"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/profilRisk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/colorWave"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="385dp"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_date"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/profilBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Not Set"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_city"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/profilAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Not Set"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_address"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/profilCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Not Set"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_mail"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/profilEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Not Set"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_phone"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/profilPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Not Set"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/profilChange"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="15dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_button"
                            android:text="Change Profil"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <Button
                            android:id="@+id/profilOut"
                            android:layout_marginBottom="15dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_button"
                            android:text="Sign Out"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>